# Application Configuration
APP_NAME=Contract Analyzer API
APP_VERSION=0.1.0
DEBUG=false

# API Configuration
API_V1_PREFIX=/api/v1
MAX_UPLOAD_SIZE_MB=10

# LLM Configuration
# Options: external, local
LLM_MODE=external

# External LLM Settings (when LLM_MODE=external)
# Providers: openai, anthropic
EXTERNAL_API_PROVIDER=openai
EXTERNAL_API_KEY=your_api_key_here
EXTERNAL_MODEL=gpt-4
EXTERNAL_API_TIMEOUT=60
EXTERNAL_API_MAX_RETRIES=3

# Local LLM Settings (when LLM_MODE=local)
LOCAL_LLM_BASE_URL=http://localhost:11434
LOCAL_MODEL=llama3
LOCAL_API_TIMEOUT=120

# Processing Configuration
RETRIEVAL_TOP_K=5
CHUNK_SIZE=400
CHUNK_OVERLAP=100
MAX_CONCURRENT_JOBS=5
JOB_TIMEOUT_SECONDS=600
